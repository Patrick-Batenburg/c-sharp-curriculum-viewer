@model IEnumerable<Goal>

@{
	ViewData["Title"] = "Index";
}
@await Component.InvokeAsync(ViewComponentConstants.BreadCrumbs)
<div class="row">
	<div class="col s12">
		<h2>Doelen</h2>
		@await Html.PartialAsync("_CreateButton", "Leerdoel")
		<app-data-table data-records='@Html.Raw(Json.Serialize(Model.ToList()))'
						data-limit="10"
						data-columns="description:Beschrijving,bloom:Bloom"
						data-url_details="@Url.Action("details", "goal", null)" />
	</div>
</div>