@model SideBarViewModel

<ul class="collapsible expandable">
    @foreach (ExamProgram program in Model.examPrograms)
    {
        <li>
            <div class="collapsible-header">
                @program.Name
            </div>
            <div class="collapsible-body">
                <div class="row">
                    <div class="col s10 m10">
                        <ul class="collapsible" data-collapsible="accordion">
                            @for (int i = 1; i <= 4; i++)
                            {
                                <li>
                                <div class="collapsible-header">
                                    Studiejaar @i
                                </div>
                            <div class="collapsible-body">
                                <ul>
                                    @foreach (Course course in program.Courses.OrderBy(n => n.Name).Where(c => c.StudyYear.Equals(i)))
                                    {
                                        <li><a asp-controller="course" asp-action="details" asp-route-id="@course.Id">@course.Name</a></li>
                                    }

                                </ul>
                            </div>
                                </li>
                            }
                        </ul>
                        
                    </div>
                    </div>
                </div>
        </li>
    }
</ul>