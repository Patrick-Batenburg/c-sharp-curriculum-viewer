<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CurriculumViewer</title>
	<partial name="@(PartialConstants.MetaData)"/>
	<link rel="stylesheet" asp-href-include="~/css/main.css" />
</head>
<body>
	<header class="app-header"></header>
	@await Component.InvokeAsync(ViewComponentConstants.NavBar)
	<content class="row main-content">
		<aside class="col m2 app-aside">
			@await Component.InvokeAsync(ViewComponentConstants.SideBar)
		</aside>
		<main class="col m10 app-main">
			@RenderBody()
		</main>
	</content>
	<footer class="app-footer"></footer>

	@RenderSection("scripts", false)
	<script src="https://cdnjs.cloudflare.com/ajax/libs/cash/2.3.3/cash.min.js"></script>
	<script type="text/javascript" asp-src-include="~/js/main.js"></script>
</body>
</html>
