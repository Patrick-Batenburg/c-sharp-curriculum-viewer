@model IEnumerable<Course>

@{
	ViewData["Title"] = "Index";
}
@await Component.InvokeAsync(ViewComponentConstants.BreadCrumbs)

<div class="row">

	<div class="col s12">
		<h2>Periodes</h2>
		@await Html.PartialAsync("_CreateButton", "Periode")
		<app-data-table data-records='@Html.Raw(Json.Serialize(Model.ToList()))'
						data-limit="10"
						data-columns="name:Naam,mentor.fullName:Coördinator"
						data-url_details="@Url.Action("details", "course", null)" />
	</div>
</div>
